{
    "name": "ahuggins/open-on-make",
    "description": "Automatically open files in editor when Artisan make:* is executed",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Huggins",
            "email": "andrewhuggins@gmail.com"
        }
    ],
    "require": {
        "php" : "~7.4",
        "imliam/laravel-env-set-command": "^1.1",
        "symfony/finder": "^5.1",
        "laravel/helpers": "^1.2",
        "illuminate/support": "^7.19|^8.80",
        "illuminate/console": "^7.19|^8.80"
    },
    "autoload": {
        "psr-4": {
            "OpenOnMake\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OpenOnMake\\Providers\\OpenOnMakeServiceProvider"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "orchestra/testbench": "^5.4"
    }
}
